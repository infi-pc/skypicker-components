$placesWidth = 417px;

.search-place-picker
  .content
    padding-bottom: 6px;
    .loader
      position: absolute
      height: 100%
      width: $placesWidth;
      background-color rgba(255,255,255,0.5)
      z-index: 1;
      text-align center
      padding-top 120px
      box-sizing border-box
      overflow hidden
      transition: opacity .5s;
      opacity: 1;
      &.not-loading
        opacity: 0;
        pointer-events: none;
        /* hack for older IEs because pointer events doesn't work */
        margin-top: -100000px;
        transition: margin-top 0s .5s;

    .no-results
      position: absolute
      height: 100%
      padding-top 120px
      width: $placesWidth;
      display: none
      text-align center
      &.shown
        display: block

    .places
      overflow-y scroll
      height: 269px;
      width: $placesWidth;



  .place-row
    position: relative
    height 30px;
    line-height 30px;
    width: 390px
    padding-top 0px
    border-bottom: $border
    cursor pointer
    &:hover, &.selected
      background-color #fff9ce

    .name
      position: absolute;
      /*margin-top: 11px;*/

    .type
      position: absolute;
      right: 0px


@media(max-width:699px)
  .search-place-picker
    .content
      .places
        width: 100%;
        .place-row
          width: 100%;
    .mode-selector
      &>div.mode-radius
        display none

