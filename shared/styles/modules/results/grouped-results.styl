body
  font-family sans-serif
  font-size 12px



.price-group
  margin-bottom 10px
  background-color #F2F2F5
  max-width 900px
  border-radius 5px 5px 0px 0px
  overflow hidden
  .price-group--header
    padding: 5px
    float: right
    color: #fff

  .legs-header
    padding: 5px
    color: #fff
    background-color #7E7E80

  .legs-body
    .legs-content
      border-spacing 0 2px
      border-radius 5px
      overflow hidden
      margin 12px 8px
      font-size 14px

      .trip-info
        background-color: #fff
        &.selected
          background-color: #fff //#f5f5f5
        &.hidden
          color: #888
        margin-bottom 2px
        .field
          cursor pointer
          display: inline-block
          padding: 8px 0px
          box-sizing border-box
          &.radio
            width: 10%;
          &.departure-date
            width: 20%;
          &.departure
            width: 10%;
          &.duration
            width: 10%;
          &.arrival-date
            width: 20%;
          &.arrival
            width: 10%;
          &.stops
            width: 10%;
          &.details
            padding-right 8px
            text-align right
            width: 10%;

        .trip-details
          border 2px solid #7E7E80
          .field
            &.radio
              width: 10%;
            &.departure-date
              width: 20%;
              font-size: 12px
            &.departure
              width: 10%;
            &.duration
              width: 10%;
            &.arrival-date
              width: 20%;
              font-size: 12px
            &.arrival
              width: 10%;
            &.stops
              width: 10%;
            &.details
              padding-right 8px
              text-align right
              width: 10%;
